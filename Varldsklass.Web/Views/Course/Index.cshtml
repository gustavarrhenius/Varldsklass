@model Varldsklass.Web.Models.AddCourseViewModel
@using Varldsklass.Domain.Entities
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
 }

<p>@Html.ActionLink("Lägg till Kategori", "EditCategory", null, new { @class = "button" })</p>
<p>@Html.ActionLink("Lägg till kurs", "EditCourse", null, new { @class = "button" })</p>

<h3>Kategorier</h3>
@foreach (var category in Model.Categories) {
    @Html.Label(category.Name) @Html.ActionLink("Ändra", "EditCategory", new { id = category.ID} , new { @class = "tiny success button" })@Html.ActionLink("Ta Bort", "DeleteCategory", new { id = category.ID}, new { @class = "tiny alert button" })
    <br />
}
<h3>Kurser</h3>
@foreach (var post in Model.Posts)
{
     @Html.ActionLink(post.Title, "Course", new { id = post.ID }) @Html.ActionLink("Ändra", "EditCourse", new { id = post.ID }, new { @class = "tiny success button" })@Html.ActionLink("Ta Bort", "DeleteCourse", new { id = post.ID }, new { @class = "tiny alert button" })
    <br />
}

