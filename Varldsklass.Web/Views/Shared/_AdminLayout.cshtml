<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/foundation/stylesheets/app.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/foundation/stylesheets/foundation.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/foundation/javascripts/modernizr.foundation.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/foundation/javascripts/jquery.js")" type="text/javascript"></script>
    <!-- IE Fix for HTML5 Tags -->
    <!--[if lt IE 9]>
        <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body>

<div class="page">
        
    <header>
        <h3>Admin</h3>
        
        <div class="row">
            @{Html.RenderAction("Menu", "Admin");}
        </div>        
    </header>
        <section id="main" class="row">
            @RenderBody()
        </section>
        
        <footer class="row">
        </footer>
</div>
    <script src="@Url.Content("~/Content/foundation/javascripts/foundation.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/foundation/javascripts/app.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/tinymce/tiny_mce.js")" type="text/javascript"></script>
    <script type="text/javascript">
        tinyMCE.init({
            mode: "textareas",
            theme: "advanced",
            theme_advanced_buttons1: "formatselect,bold,italic,|,bullist,numlist,|,link,unlink,|,undo,redo",
            width: "100%"
        });
    </script>
</body>
</html>
